<% include ../partials/header%>

<div class"row">
    <h1 style="text-align: center"> Edit <%= sight.name %> </h1>
    <div style="width: 40%; margin: 25px auto;">

        <form action="/sights/<%= sight._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="location">Title</label>
                <input class="form-control" type="text" name="sight[name]" value="<%= sight.name %>">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="sight[image]" value="<%= sight.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="sight[description]" value="<%= sight.description %>">
            </div>
            <!--<div class="form-group">
                <label for="location">3</label>
                <input class="form-control" type="number" name="sight[price]" value="<%= sight.price %>" min="0.01" step="0.01">
            </div>-->
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= sight.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>

        <a href="/sights">Go back</a>
    </div>
</div>

<% include ../partials/footer%>
