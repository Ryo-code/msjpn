<% include ../partials/header %>

<header class="jumbotron jumbo-pic">
    <div class="container">
        <h1 style="font-weight: 700">Must-See Japan</h1>
        <h3 style="color: black"> Share your pics of the sights that <em style="font-weight: 600"> must</em> be seen  in Japan!</h3>
        <br>
        <p>
            <a class="btn btn-default btn-large" href="/sights/new">
                <span class="glyphicon glyphicon-plus-sign"/></span> Add New Must-See! 
            </a>
        </p>
    </div>
</header>

<div class="row text-center" style="display: flex; flex-wrap: wrap">
    <div class="col-lg-12">
        <h2> See everyone's must-see pictures here</h2>
    </div>

    <!-- Render the following div for each sight in the DB:-->
    <% sights.forEach((sight) => { %> 
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                  <img src="<%= sight.image %>">
                  <div class="caption">
                        <h4> <%= sight.name %> </h4>
                  </div>
                  <p>
                      <a href="/sights/<%= sight._id %>" class="btn btn-primary">More Info</a>
                            <!-- this sight â†‘ relates to the forEach's argument, and the _id refers to mongoDB's randomly(& automatically)-generated ID -->
                  </p>
            </div>
        </div>
    <% }); %>
</div>

<% include ../partials/footer %>